@model IEnumerable<MyProject.Models.Movie>

@{
    ViewData["Title"] = "Movies List";
}

<h2>Movies List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Rating</th>
            <th>District</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Description</td>
                <td>@movie.Rating</td>
                <td>@movie.District.Name</td>
                <td>@movie.Category.Name</td>
            </tr>
        }
    </tbody>
</table>